# Base Mainnet Configuration for Liquidation Bot
# Copy this to .env and fill in your private key

# Network Configuration
RPC_URL=https://mainnet.base.org
WS_URL=wss://mainnet.base.org

# Wallet Configuration (REQUIRED: Replace with your actual private key)
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE_WITHOUT_0x_PREFIX

# Deployment will create the LIQUIDATOR_CONTRACT address
# This will be updated after deployment
LIQUIDATOR_CONTRACT=

# Bot Configuration
MIN_PROFIT_THRESHOLD=1000000000000000000  # 1 ETH in wei
GAS_PRICE_MULTIPLIER=2
HEALTH_FACTOR_THRESHOLD=1100000000000000000  # 1.1 ETH in wei
MONITORING_INTERVAL_SECS=5

# Database Configuration
DATABASE_URL=sqlite:liquidation_bot_mainnet.db

# Optional: Target specific user for testing
TARGET_USER=

# Base Network Details (for reference)
# Chain ID: 8453
# Currency: ETH
# Block Explorer: https://basescan.org/