# Network Configuration
# Supported networks: mainnet, arbitrum, optimism, polygon, base, avalanche, sepolia, goerli
NETWORK=mainnet

# RPC URLs (replace YOUR_API_KEY with your actual API key)
RPC_URL=
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Pool Address (optional - will use default for network if not specified)
# POOL_ADDRESS=0x87870Bca3F3fD6335C3F4ce8392D69350B4fA4E2

# Monitoring Settings
QUERY_HISTORICAL=true
HISTORICAL_BLOCKS=1000
STATS_INTERVAL=60000  # Statistics display interval in milliseconds

# Logging Settings
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true
LOG_DIR=./logs

# Optional Filters (comma-separated addresses)
# WATCHED_USERS=0x123...,0x456...
# WATCHED_ASSETS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2,0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
# MIN_DEBT_THRESHOLD=0.1  # Minimum debt amount in ETH to log