# Liquidation Monitor Configuration
# Copy this file to .env to use with the liquidation monitor

# Network Configuration
# Base Mainnet RPC URL (replace with your own)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# or use a local node
# RPC_URL=http://localhost:8545

# WebSocket URL for real-time monitoring (optional)
# If not provided, will fall back to HTTP polling
WS_URL=wss://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Aave L2Pool Contract Address on Base
POOL_ADDRESS=0xA238Dd80C259a72e81d7e4664a9801593F98d1c5

# Monitoring Configuration
LIQUIDATION_MONITOR_MAX_EVENTS=1000
LIQUIDATION_MONITOR_LOG_TO_FILE=true
LIQUIDATION_MONITOR_LOG_FILE=liquidations.jsonl
LIQUIDATION_MONITOR_STATS_INTERVAL=30
LIQUIDATION_MONITOR_VERBOSE=false

# Optional: Custom pool address for testing
# LIQUIDATION_MONITOR_POOL_ADDRESS=0x...